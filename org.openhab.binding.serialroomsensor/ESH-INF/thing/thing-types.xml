        xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

    <!-- Sample Thing Type -->
    <thing-type id="roomsensorstate">
        <label>SerialRoomSensor Binding Thing</label>
        <description>Sample thing for SerialRoomSensor Binding</description>

        <channels>
            <channel id="temperature" typeId="channel_temperature"/>
            <channel id="brightness" typeId="channel_brightness"/>
            <channel id="humidity" typeId="channel_humidity"/>
            <channel id="refresh" typeId="channel_refresh" />
        </channels>
        
